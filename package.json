{
  "name": "intentlens",
  "displayName": "IntentLens",
  "description": "Explain selected frontend code and diff impact in human terms.",
  "version": "0.0.6",
  "publisher": "intentlens",
  "repository": {
    "type": "git",
    "url": "https://github.com/LukeLiou/intentlens.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "assets/intentlens_128.png",
  "activationEvents": [
    "onCommand:intentlens.explainSelection",
    "onCommand:intentlens.explainDiff"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "intentlens.explainSelection",
        "title": "IntentLens: Explain Selected Code（解释选中代码）"
      },
      {
        "command": "intentlens.explainDiff",
        "title": "IntentLens: Explain Diff Impact（解释 Diff 影响）"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "intentlens.explainSelection",
          "when": "editorHasSelection",
          "group": "navigation@intentlens"
        },
        {
          "command": "intentlens.explainDiff",
          "when": "editorTextFocus",
          "group": "navigation@intentlens"
        }
      ]
    },
    "configuration": {
      "title": "IntentLens",
      "properties": {
        "intentlens.apiKey": {
          "type": "string",
          "default": "",
          "description": "API key for your OpenAI-compatible endpoint."
        },
        "intentlens.baseUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1",
          "description": "Base URL for OpenAI-compatible API."
        },
        "intentlens.model": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "Model name."
        },
        "intentlens.beginnerMode": {
          "type": "boolean",
          "default": false,
          "description": "Use teaching-style explanations for selected code."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "package:skip-secrets": "vsce package --allow-package-all-secrets --allow-package-env-file",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.4.5",
    "eslint": "^8.57.0"
  }
}
